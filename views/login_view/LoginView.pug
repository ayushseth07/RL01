include ../common/Header
body
  #message-box-modal.modal
   .modal-content
    .modal-subcontent.bg-black
    div.close(onclick="utils.CloseMessageBox()") &times;
    .modal-subcontent
     p#message-box-content
     div.d-flex.justify-content-center
      button(class= "custom-btn modal-btn" onclick="utils.CloseMessageBox()") 
       span OK
  #top-nav-bar
    h2 Rank List
    div
  .form-box
    h2 Login
    form#login-form(action="/login", method="POST")
      .user-box
        input(type='email', id='email', name='email', required)
        label(for='email') Email
      .user-box
        input(type='password', id='password', name='password', required)
        label(for='password') Password
      button(type='submit' class="custom-btn")
        span Login
script(src="/js/LoginView.js")
