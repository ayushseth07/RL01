include ../common/Header
link(rel='stylesheet', href='/css/GraphicalDashboardView.css')
body
  #message-box-modal.modal
   .modal-content
    .modal-subcontent.bg-black
    div.close(onclick="utils.CloseMessageBox()") &times;
    .modal-subcontent
     p#message-box-content
     div.d-flex.justify-content-center
      button(class= "custom-btn modal-btn" onclick="utils.CloseMessageBox()") 
       span OK
  #top-nav-bar
    h2 Rank List
    div
      ul.nav-links
        li
          a(href="/dashboard") Rank List
        li  
          a(href="/logout") Logout
  #graphical-dashboard-area.d-flex.flex-col
    .chart-row.h-9
     .d-flex.h-100
      .dashboard-heading-section.m-8
       h2#process-heading 
    .chart-row.h-45
     .d-flex.h-100
      .chart-section.m-bottom-8.m-left-8.m-right-8
        h3 CPU Usage
        div#cpu-usage-chart
      .chart-section.m-bottom-8.m-right-8
        h3 Memory Usage
        div#memory-usage-chart

      // Add three more chart sections for other charts
    .chart-row.h-45
     .d-flex.h-100
      .chart-section.m-bottom-8.m-left-8.m-right-8
        h3 CPU Time and Elapsed Time
        div#cpu-time-chart
      .chart-section.m-bottom-8.m-right-8
        h3 CPU Usage vs Time
        div#timestamp-vs-cpu-usage-chart
  #loader.loader
script(src='/vendors/apexcharts/dist/apexcharts.min.js')
script(src="/js/GraphicalDashboardView.js")
