include ../common/Header
body
  #message-box-modal.modal
   .modal-content
    .modal-subcontent.bg-black
     div.close(onclick="utils.CloseMessageBox()") &times;
    .modal-subcontent
     p#message-box-content
     div.d-flex.justify-content-center
      button(class= "custom-btn modal-btn" onclick="utils.CloseMessageBox()") 
       span OK
  #top-nav-bar
   h2 Rank List
   div
     ul.nav-links
       li
         a(href="/login") Login
  .form-box
    h2 Signup
    form#signup-form(action="/signup", method="POST")
      .user-box
        input(type="text", id="name", name="name", required)
        label(for="name") Username
      .user-box
        input(type="email", id="email", name="email", required)
        label(for="email") Email
      .user-box
        input(type="password", id="password", name="password", required)
        label(for="password") Password
      .user-box
        select(id="role", name="role", required)
          option(value="" selected disabled) Select Role
          option(value="admin") Admin
          option(value="dean") Dean
          option(value="placement_head") Placement Head
      button.custom-btn(type="submit")
        span Signup
script(src="/js/SignupView.js")